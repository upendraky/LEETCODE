class Solution {
    public List<String> validateCoupons(String[] code, String[] businessLine, boolean[] isActive) {

        // Business line priority
        Map<String, Integer> priority = new HashMap<>();
        priority.put("electronics", 0);
        priority.put("grocery", 1);
        priority.put("pharmacy", 2);
        priority.put("restaurant", 3);

        // List to store valid coupons as (businessLine, code)
        List<String[]> valid = new ArrayList<>();

        for (int i = 0; i < code.length; i++) {

            // Condition 3: coupon must be active
            if (!isActive[i]) continue;

            // Condition 1: valid code
            if (code[i] == null || code[i].isEmpty()) continue;
            if (!code[i].matches("^[A-Za-z0-9_]+$")) continue;

            // Condition 2: valid business line
            if (!priority.containsKey(businessLine[i])) continue;

            valid.add(new String[]{businessLine[i], code[i]});
        }

        // Sort by businessLine priority, then by code lexicographically
        valid.sort((a, b) -> {
            int p1 = priority.get(a[0]);
            int p2 = priority.get(b[0]);

            if (p1 != p2) {
                return Integer.compare(p1, p2);
            }
            return a[1].compareTo(b[1]);
        });

        // Extract only codes
        List<String> result = new ArrayList<>();
        for (String[] pair : valid) {
            result.add(pair[1]);
        }

        return result;
    }
}
